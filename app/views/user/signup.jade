extends ../layout

block content
  .row
    .col-md-6.col-md-offset-3
      h1.text-center Sign Up
      br
      form(role="form" method="POST")
        input(type="hidden" name="_csrf" value=_csrf)
        .form-group: input.form-control(type="text" name="username" placeholder="Username" required)
        .form-group: input.form-control(type="email" name="email" placeholder="Email Address" required)
        .form-group: input.form-control(type="password" name="password" placeholder="Password" required)
        .form-group: button.btn.btn-primary.center-block(type="submit") Sign Up
      hr
      .text-center
        p.text-muted 
          | Already have an account?
          a(href="/login") Log In 
