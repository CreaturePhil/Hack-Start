extends ../layout

block content
  .row
    .col-md-4.col-md-offset-4
      h1.text-center Log In
      br
      form(role="form" method="POST")
        input(type="hidden" name="_csrf" value=_csrf)
        .form-group: input.form-control(type="text" name="username" placeholder="Username" required)
        .form-group: input.form-control(type="password" name="password" placeholder="Password" required)
        .form-group: button.btn.btn-primary.center-block(type="submit") Log In
      .text-center: a(href="/forgot_password") Forgot password?
      hr
      .text-center
        p.text-muted 
          | Don't have an account?&nbsp;
          a(href="/signup") Sign up
